{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@database/*": ["../database/src/*"],
			"@server/*": ["../server/src/*"],
			"@tools/*": ["../tools/src/*"],
			"@mobile/*": ["./src/*"]
		}
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts"
	],
	"references": [{ "path": "../server/tsconfig.json" }]
}
