{
	"extends": "@effect-demo/tsconfig/base.json",
	"compilerOptions": {
		"preserveSymlinks": true,
		"module": "ESNext",
		"target": "ES2023",
		"esModuleInterop": true,
		"noEmit": false,
		"emitDeclarationOnly": true,
		"declarationDir": "./.types",
		"tsBuildInfoFile": "./.types/tsconfig.tsbuildinfo",
		"rootDir": "./src",
		"baseUrl": ".",
		"paths": {
			"@tools/*": ["../tools/src/*"],
			"@database/*": ["./src/*"]
		}
	},
	"include": ["./src/**/*.ts"]
}
