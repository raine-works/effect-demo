{
	"$schema": "https://turborepo.org/schema.json",
	"ui": "tui",
	"globalPassThroughEnv": ["GITHUB_TOKEN"],
	"globalEnv": ["HOME", "HOST_IP", "NODE_ENV", "TZ"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [
				"./.types/**",
				"./.expo/**",
				"./dist/**",
				"./src/generated/**"
			]
		},
		"build:docker": {
			"cache": false
		},
		"dev": {
			"dependsOn": ["^build"],
			"persistent": true,
			"cache": false
		},
		"lint": {
			"cache": false
		},
		"migrate": {
			"cache": false
		},
		"reset": {
			"cache": false,
			"persistent": true
		}
	}
}
